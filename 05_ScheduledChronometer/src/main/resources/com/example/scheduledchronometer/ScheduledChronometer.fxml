<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="200" prefWidth="320" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.scheduledchronometer.ScheduledChronometerController">
    <children>
        <TextField fx:id="secondsText" layoutX="106.0" layoutY="14.0" prefHeight="26.0" prefWidth="115.0"/>
        <Label layoutX="35.0" layoutY="19.0" text="Seconds:"/>
        <Button fx:id="startBtn" layoutX="34.0" layoutY="60.0" mnemonicParsing="false" onAction="#startCount"
                prefHeight="26.0" prefWidth="122.0" text="Start"/>
        <Button fx:id="pauseBtn" layoutX="176.0" layoutY="60.0" mnemonicParsing="false" onAction="#pauseCount"
                prefHeight="26.0" prefWidth="115.0" text="Pause"/>
        <Label fx:id="secondsLabel" alignment="CENTER" layoutX="63.0" layoutY="114.0" prefHeight="57.0"
               prefWidth="197.0">
            <font>
                <Font size="47.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
